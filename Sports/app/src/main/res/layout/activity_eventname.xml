<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.ashish.sports.Eventname"
    android:background="@drawable/ash2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtselect"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Select Tournament"
        android:layout_marginTop="60dp"
        ></TextView>
    <Spinner
        android:id="@+id/tournament"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:entries="@array/Select_tournament"
        android:prompt="@string/select1"
        android:layout_weight="0.10"
        android:textSize="20dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentRight = "true"
        android:layout_gravity="right"
        android:background="#000000"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:popupBackground="@android:color/background_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtselect2"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Select Event"
        android:layout_below="@+id/txtselect"
        android:layout_marginTop="60dp"
        ></TextView>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:entries="@array/Select_event"
        android:prompt="@string/select"
        android:spinnerMode="dialog"
        android:background="#ffffffff"
        android:layout_alignParentRight = "true"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/tournament"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtlane"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Select No of"
        android:layout_below="@+id/txtselect2"
        android:layout_marginTop="40dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtlane1"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text=" players in a lane"
        android:layout_below="@+id/txtlane"
        android:layout_marginTop="0dp"
        ></TextView>

    <Spinner
        android:id="@+id/lane"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:entries="@array/Select_lane"
        android:prompt="@string/select"
        android:spinnerMode="dialog"
        android:background="#ffffffff"
        android:layout_alignParentRight = "true"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/spinner1"
        />

        <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_label"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Participants"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/btnSubmit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
